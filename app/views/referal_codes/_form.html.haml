= simple_form_for(@referal_code) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-md-12
        = f.input :first_name, label: 'Name'
      /.col-md-6
      /  = f.input :last_name
    = f.input :email
    = f.input :discount_code

  .form-actions
    = f.button :submit, "Generate"
